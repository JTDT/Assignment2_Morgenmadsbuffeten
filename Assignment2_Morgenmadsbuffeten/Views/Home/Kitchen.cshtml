@model GuestViewModel

@{
    ViewData["Title"] = "Kitchen";
}

<h3>Kitchen</h3>

<form method="get" asp-controller ="Home" asp-action="Kitchen">
    <label for="Date">Choose a date:</label>

    <input type="date" id="guestDate" name="guestDate" value="@Model.GuestDate.ToString("yyyy-MM-dd")"/>
    <input type="submit" />
    <input type="reset" />
</form>


<table class="table">
    <thead>
        <tr>
            <th id="group">Group</th>
            <th id="expected">Expected</th>
            <th id="checkedIn">Checked in</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td headers="group">Adults</td>
            <td headers="expected">
                @Model.ExpectedAdults
            </td>
            <td headers="expected">
                @Model.CheckedInAdults
            </td>
        </tr>
        <tr>
            <td headers="group">Children</td>
            <td headers="expected">
                @Model.ExpectedChildren
            </td>
            <td headers="expected">
                @Model.CheckedInChildren
            </td>
        </tr>
        <tr>
        </tr>


    </tbody>
    <tfoot>
        <tr>
            <td headers="group">Total</td>
            <td headers="expected">
                @(Model.ExpectedChildren += Model.ExpectedAdults)
            </td>
            <td headers="expected">
                @(Model.CheckedInChildren += Model.CheckedInAdults)
            </td>

        </tr>
    </tfoot>
</table>



