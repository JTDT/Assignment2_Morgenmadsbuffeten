@model GuestViewModel

@{
    ViewData["Title"] = "Kitchen";
    
    int totalCheckedin;
    int totalExpected;
    
}


<h3>Kitchen</h3>

<div class="row">
    <div class="col-md-8">
        <form method="get" asp-controller="Home" asp-action="Kitchen">
            <label for="Date">Choose a date:</label>

            <input type="date" id="guestDate" name="guestDate" value="@Model.GuestDate.ToString("yyyy-MM-dd")" />
            <input type="submit" value="Update"/>
            <input type="reset" value="Reset"/>
        </form>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th scope="col" id="group">Group</th>
            <th scope="col" id="expected">Total guest expected</th>
            <th scope="col" id="checkedIn">Checked in</th>
            <th scope="col" id="notCheckedIn">Not checked in</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row" headers="group">Adults</th>
            <td>
                @Model.ExpectedAdults
            </td>
            <td>
                @Model.CheckedInAdults
            </td>
            <td>
                @(Model.ExpectedAdults - Model.CheckedInAdults)
            </td>
        </tr>
        <tr>
            <th scope="row" headers="group">Children</th>
            <td >
                @Model.ExpectedChildren
            </td>
            <td>
                @Model.CheckedInChildren
            </td>
            <td>
                @(Model.ExpectedChildren - Model.CheckedInChildren)
            </td>
        </tr>
        <tr>
        </tr>


    </tbody>
    <tfoot>
        <tr>
            <td headers="group">Total</td>
            <td >
                @(totalExpected = Model.ExpectedChildren + Model.ExpectedAdults)
            </td>
            <td >
                @(totalCheckedin = Model.CheckedInChildren + Model.CheckedInAdults)
            </td>
            <td>
                @(totalExpected - totalCheckedin)
            </td>

        </tr>
    </tfoot>
</table>



