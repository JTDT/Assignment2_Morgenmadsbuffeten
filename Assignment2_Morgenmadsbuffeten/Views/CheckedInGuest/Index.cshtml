@model IEnumerable<Assignment2_Morgenmadsbuffeten.Models.CheckedInGuest>

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurant</h1>
<p>Fill out the form below to check guests in!</p>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Children)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Children)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CheckedInGuestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CheckedInGuestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CheckedInGuestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
